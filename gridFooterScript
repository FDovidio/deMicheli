<script>

  const imageFiles = [
  "IMG-20161125-WA0023.jpg",
  "IMG-20161125-WA0017.jpg",
  "IMG-20161125-WA0020.jpg"
  ];
  
  const galleryContainer = document.getElementById('gallery');
  
  imageFiles.forEach((filename) => {
      const imagePath = `${filename}`;
      const altText = `Imagen ${filename.split('.')[0]}`;
      
      const cardHtml = `
          <div class="bg-image col-md-4 col-sm-6 mb-4 position-relative">
              <img src="${imagePath}" alt="${altText}" class="img-fluid gallery-img" data-toggle="modal" data-target="#imageModal" data-src="${imagePath}">
              <div class="mask" " data-toggle="modal" data-target="#imageModal">
                  <div class="d-flex justify-content-center align-items-center w-100">
                      <p class="text-grey mb-0">VER</p>
                  </div>
              </div>
          </div>
      `;
      
      galleryContainer.insertAdjacentHTML('beforeend', cardHtml);
  });
  
  document.addEventListener('click', function(event) {
            if (event.target.matches('.gallery-img, .mask')) {
                let imageSrc = event.target.getAttribute('data-src');
                if (!imageSrc) {
                    imageSrc = event.target.parentElement.querySelector('.gallery-img').getAttribute('data-src');
                }
                document.getElementById('modalImage').src = imageSrc;
            }
        });
</script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
